NODE_ENV=development
PORT=3001

# Database
# For local Docker: postgresql://goresto_user:goresto_dev_password@db:5432/goresto
# For local PostgreSQL: postgresql://goresto_user:goresto_dev_password@localhost:5432/goresto
# For Neon (legacy): postgresql://user:password@host/goresto?sslmode=require
DATABASE_URL=postgresql://goresto_user:goresto_dev_password@db:5432/goresto

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_ACCESS_SECRET=your-access-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-key-at-least-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Additional CORS origins (comma-separated, for production Vercel domain)
# ADDITIONAL_CORS_ORIGINS=https://goresto.vercel.app,https://www.goresto.com

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# Frontend env vars (set in Vercel dashboard for deployed frontend)
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001

# Docker Compose vars (used by docker-compose.staging.yml)
DB_USER=goresto_user
DB_PASSWORD=goresto_dev_password
