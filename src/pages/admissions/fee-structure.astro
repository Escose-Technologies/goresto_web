---
import InnerPageLayout from '../../layouts/InnerPageLayout.astro';

const breadcrumbs = [
  { name: "Admissions", href: "/admissions" },
  { name: "Fee Structure", href: "/admissions/fee-structure" }
];

const feeStructure = [
  { category: "Pre-Primary", classes: "Nursery, LKG, UKG", admission: "₹15,000", annual: "₹45,000", monthly: "₹3,500" },
  { category: "Primary", classes: "Class I - V", admission: "₹20,000", annual: "₹55,000", monthly: "₹4,500" },
  { category: "Middle", classes: "Class VI - VIII", admission: "₹25,000", annual: "₹65,000", monthly: "₹5,500" },
  { category: "Secondary", classes: "Class IX - X", admission: "₹30,000", annual: "₹75,000", monthly: "₹6,500" },
  { category: "Senior Secondary", classes: "Class XI - XII", admission: "₹35,000", annual: "₹85,000", monthly: "₹7,500" }
];

const otherCharges = [
  { item: "Registration Fee", amount: "₹1,000", note: "Non-refundable" },
  { item: "Transport Fee", amount: "₹2,000 - ₹3,500", note: "Per month (route-wise)" },
  { item: "Uniform & Books", amount: "As applicable", note: "Varies by class" },
  { item: "Examination Fee", amount: "₹500 - ₹2,000", note: "Per examination" }
];
---

<InnerPageLayout 
  title="Fee Structure | The First Step International School"
  description="Complete fee structure for all classes at The First Step International School including tuition, admission, and other charges."
  pageTitle="Fee Structure"
  pageSubtitle="Transparent and affordable education"
  breadcrumbs={breadcrumbs}
>
  <!-- Important Notice -->
  <section class="mb-12">
    <div class="bg-secondary/10 border border-secondary/20 rounded-2xl p-6">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 bg-secondary rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-slate-900 mb-1">Academic Year 2026-27</h3>
          <p class="text-sm text-slate-600">Fee structure is subject to revision. Please contact the admission office for the latest fee details and payment options.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Fee Table -->
  <section class="mb-16">
    <h2 class="text-2xl font-serif font-bold text-slate-900 mb-6">Tuition Fee Structure</h2>
    
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="bg-primary text-white">
              <th class="px-6 py-4 text-left font-semibold">Category</th>
              <th class="px-6 py-4 text-left font-semibold">Classes</th>
              <th class="px-6 py-4 text-center font-semibold">Admission Fee</th>
              <th class="px-6 py-4 text-center font-semibold">Annual Fee</th>
              <th class="px-6 py-4 text-center font-semibold">Monthly Fee</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            {feeStructure.map((row, index) => (
              <tr class={index % 2 === 0 ? "bg-white" : "bg-slate-50"}>
                <td class="px-6 py-4 font-medium text-slate-900">{row.category}</td>
                <td class="px-6 py-4 text-slate-600">{row.classes}</td>
                <td class="px-6 py-4 text-center text-slate-900">{row.admission}</td>
                <td class="px-6 py-4 text-center text-slate-900">{row.annual}</td>
                <td class="px-6 py-4 text-center text-primary font-semibold">{row.monthly}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
    
    <p class="text-sm text-slate-500 mt-4">* Admission fee is a one-time payment. Monthly tuition fee is payable by the 10th of each month.</p>
  </section>

  <!-- Other Charges -->
  <section class="mb-16">
    <h2 class="text-2xl font-serif font-bold text-slate-900 mb-6">Other Charges</h2>
    
    <div class="grid md:grid-cols-2 gap-4">
      {otherCharges.map((charge) => (
        <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-100 flex justify-between items-center">
          <div>
            <h4 class="font-medium text-slate-900">{charge.item}</h4>
            <p class="text-xs text-slate-500">{charge.note}</p>
          </div>
          <span class="text-primary font-semibold">{charge.amount}</span>
        </div>
      ))}
    </div>
  </section>

  <!-- Payment Information -->
  <section class="mb-16">
    <div class="grid md:grid-cols-2 gap-8">
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
        <h3 class="text-xl font-semibold text-slate-900 mb-4">Payment Schedule</h3>
        <ul class="space-y-3 text-slate-600">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Monthly fee due by 10th of each month</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Quarterly payment option available (5% discount)</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Annual payment option available (10% discount)</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>Late fee of ₹50/day after 10th</span>
          </li>
        </ul>
      </div>
      
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
        <h3 class="text-xl font-semibold text-slate-900 mb-4">Payment Methods</h3>
        <ul class="space-y-3 text-slate-600">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Cash payment at school office</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Cheque / Demand Draft</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Online bank transfer (NEFT/RTGS)</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>UPI / Debit Card / Credit Card</span>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section>
    <div class="bg-gradient-to-r from-primary to-primary-dark rounded-3xl p-8 md:p-12 text-white text-center">
      <h3 class="text-2xl font-serif font-bold mb-4">Have Questions About Fees?</h3>
      <p class="text-white/80 mb-6 max-w-2xl mx-auto">Contact our admission office for detailed fee breakup, sibling discount, and other concessions.</p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center gap-2 bg-white hover:bg-slate-100 text-primary px-6 py-3 rounded-full font-medium transition-colors">
          Contact Office
        </a>
        <a href="tel:+919876543210" class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 text-white px-6 py-3 rounded-full font-medium transition-colors border border-white/20">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>
    </div>
  </section>
</InnerPageLayout>
