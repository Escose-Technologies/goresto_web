---
import InnerPageLayout from '../../layouts/InnerPageLayout.astro';

const breadcrumbs = [
  { name: "Gallery", href: "/gallery" },
  { name: "Videos", href: "/gallery/videos" }
];

const videos = [
  { title: "Annual Day 2025-26", description: "Highlights from our Annual Day celebration", duration: "5:30" },
  { title: "Sports Day Highlights", description: "Best moments from Sports Day 2026", duration: "4:15" },
  { title: "Independence Day Celebration", description: "Flag hoisting and cultural program", duration: "3:45" },
  { title: "Science Exhibition", description: "Student projects and innovations", duration: "6:20" },
  { title: "Campus Tour", description: "Virtual tour of our beautiful campus", duration: "8:00" },
  { title: "Republic Day Program", description: "Patriotic performances by students", duration: "4:50" }
];
---

<InnerPageLayout 
  title="Video Gallery | The First Step International School"
  description="Watch videos from The First Step International School - performances, events, campus tours, and more."
  pageTitle="Video Gallery"
  pageSubtitle="Relive the moments through our videos"
  breadcrumbs={breadcrumbs}
>
  <!-- Featured Video -->
  <section class="mb-12">
    <div class="bg-slate-900 rounded-3xl overflow-hidden">
      <div class="aspect-video flex items-center justify-center relative">
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        <div class="text-center text-white relative z-10">
          <div class="w-20 h-20 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4 cursor-pointer hover:bg-white/30 transition-colors">
            <svg class="w-10 h-10 ml-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-2">Annual Day 2025-26</h3>
          <p class="text-white/70">Featured Video â€¢ 5:30 mins</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Grid -->
  <section class="mb-12">
    <h2 class="text-2xl font-serif font-bold text-slate-900 mb-8">All Videos</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {videos.map((video) => (
        <div class="group bg-white rounded-2xl overflow-hidden shadow-sm border border-slate-100 hover:shadow-lg transition-shadow cursor-pointer">
          <div class="aspect-video bg-slate-200 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-slate-400">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
            <div class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <div class="w-16 h-16 bg-white/90 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-primary ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
            <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
              {video.duration}
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-slate-900 group-hover:text-primary transition-colors mb-1">{video.title}</h3>
            <p class="text-sm text-slate-500">{video.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- YouTube Channel CTA -->
  <section>
    <div class="bg-gradient-to-r from-red-600 to-red-500 rounded-3xl p-8 md:p-12 text-white text-center">
      <svg class="w-16 h-16 mx-auto mb-4" viewBox="0 0 24 24" fill="currentColor">
        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
      </svg>
      <h3 class="text-2xl font-serif font-bold mb-2">Subscribe to Our YouTube Channel</h3>
      <p class="text-white/80 mb-6">Stay updated with the latest videos from The First Step International School</p>
      <a href="#" class="inline-flex items-center gap-2 bg-white text-red-600 px-8 py-3 rounded-full font-semibold hover:bg-slate-100 transition-colors">
        Subscribe Now
      </a>
    </div>
  </section>
</InnerPageLayout>
