---
import InnerPageLayout from '../../layouts/InnerPageLayout.astro';

const breadcrumbs = [
  { name: "Gallery", href: "/gallery" }
];

const photoCategories = [
  "Campus & Infrastructure",
  "Annual Day",
  "Sports Day",
  "Independence Day",
  "Science Exhibition",
  "Cultural Programs"
];
---

<InnerPageLayout 
  title="Gallery | The First Step International School"
  description="Explore photos and videos from The First Step International School - events, celebrations, campus life, and more."
  pageTitle="Gallery"
  pageSubtitle="Capturing memories and moments"
  breadcrumbs={breadcrumbs}
>
  <!-- Gallery Type Selection -->
  <section class="mb-12">
    <div class="grid md:grid-cols-2 gap-6">
      <a href="/gallery/photos" class="group relative bg-gradient-to-br from-primary to-primary-dark rounded-3xl p-8 overflow-hidden" data-animate="fade-up">
        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
        <div class="relative text-white">
          <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold mb-2">Photo Gallery</h2>
          <p class="text-white/80">Browse through our collection of photos from various school events and activities</p>
          <div class="mt-6 flex items-center gap-2 text-white/90">
            <span>View Photos</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </div>
      </a>
      
      <a href="/gallery/videos" class="group relative bg-gradient-to-br from-secondary to-secondary-dark rounded-3xl p-8 overflow-hidden" data-animate="fade-up" data-delay="200">
        <div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors"></div>
        <div class="relative text-slate-900">
          <div class="w-16 h-16 bg-white/40 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold mb-2">Video Gallery</h2>
          <p class="text-slate-700">Watch videos of school performances, events, and special moments</p>
          <div class="mt-6 flex items-center gap-2 text-slate-800">
            <span>Watch Videos</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </div>
      </a>
    </div>
  </section>

  <!-- Featured Photos Preview -->
  <section class="mb-16" data-animate="fade-up">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-serif font-bold text-slate-900">Featured Photos</h2>
      <a href="/gallery/photos" class="text-primary hover:text-primary-dark transition-colors flex items-center gap-1 text-sm font-medium">
        View All
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4" data-stagger>
      {[1, 2, 3, 4, 5, 6, 7, 8].map((item) => (
        <div class="group relative aspect-square rounded-xl overflow-hidden bg-slate-200 cursor-pointer" data-animate="fade-up">
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-slate-400">
              <svg class="w-10 h-10 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-xs">Photo {item}</span>
            </div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-3 text-white opacity-0 group-hover:opacity-100 transition-opacity">
            <p class="text-sm font-medium truncate">Event Photo {item}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Photo Categories -->
  <section data-animate="fade-up">
    <h2 class="text-2xl font-serif font-bold text-slate-900 mb-8">Browse by Category</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4" data-stagger>
      {photoCategories.map((category) => (
        <a href="/gallery/photos" class="group bg-white rounded-xl p-5 shadow-sm border border-slate-100 hover:shadow-md hover:border-primary/20 transition-all flex items-center gap-4" data-animate="fade-up">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-slate-900 group-hover:text-primary transition-colors">{category}</h3>
            <p class="text-sm text-slate-500">View photos</p>
          </div>
        </a>
      ))}
    </div>
  </section>
</InnerPageLayout>
