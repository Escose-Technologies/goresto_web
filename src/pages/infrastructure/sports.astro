import InnerPageLayout from '../../layouts/InnerPageLayout.astro';

const breadcrumbs = [
  { name: "Infrastructure", href: "/infrastructure" },
  { name: "Sports", href: "/infrastructure/sports" }
];

const outdoorFacilities = [
  { name: "Football Ground", icon: "âš½" },
  { name: "Cricket Pitch", icon: "ğŸ" },
  { name: "Basketball Court", icon: "ğŸ€" },
  { name: "Volleyball Court", icon: "ğŸ" },
  { name: "Athletics Track", icon: "ğŸƒ" },
  { name: "Kabaddi Ground", icon: "ğŸ¤¼" }
];

const indoorFacilities = [
  { name: "Table Tennis", icon: "ğŸ“" },
  { name: "Badminton Court", icon: "ğŸ¸" },
  { name: "Chess Club", icon: "â™Ÿï¸" },
  { name: "Carrom", icon: "ğŸ¯" },
  { name: "Yoga Hall", icon: "ğŸ§˜" },
  { name: "Indoor Games", icon: "ğŸ²" }
