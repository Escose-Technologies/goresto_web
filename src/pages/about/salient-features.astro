  {
    icon: "building",
    title: "Modern Infrastructure",
    description: "Sprawling campus with state-of-the-art facilities designed to support 360-degree development."
  },
  {
    icon: "users",
    title: "Experienced Faculty",
    description: "Dedicated team of qualified and experienced teachers committed to academic excellence."
  },
  {
    icon: "computer",
    title: "Smart Classrooms",
    description: "Technology-enabled learning with digital classrooms, projectors, and interactive teaching aids."
  },
  {
    icon: "flask",
    title: "Well-Equipped Labs",
    description: "Modern science, computer, and robotics laboratories for hands-on learning experiences."
  },
  {
    icon: "book",
    title: "Rich Library",
    description: "Extensive collection of books, journals, and digital resources to foster reading habits."
  },
  {
    icon: "trophy",
    title: "Sports Facilities",
    description: "Multiple playgrounds, basketball courts, and indoor sports facilities for physical development."
  },
  {
    icon: "music",
    title: "Arts & Culture",
    description: "Dedicated spaces for music, dance, and theatre to nurture creative expression."
  },
  {
    icon: "shield",
    title: "Safe Environment",
    description: "CCTV surveillance, trained security staff, and child-safety protocols for a secure campus."
  },
  {
    icon: "bus",
    title: "Transport Facility",
    description: "GPS-enabled buses covering major routes with trained drivers and attendants."
  },
  {
    icon: "heart",
    title: "Health Care",
    description: "On-campus medical room with trained staff and tie-ups with nearby hospitals."
  },
  {
    icon: "globe",
    title: "Holistic Development",
    description: "Focus on academics, sports, arts, and life skills for well-rounded personality development."
