---
import Layout from '../layouts/Layout.astro';
import { TopBar } from '../components/top-bar.jsx';
import Navbar from '../components/ui/navbar.jsx';
import { HeroSection } from '../components/hero-section.jsx';
import { StatsSection } from '../components/stats-section.jsx';
import { BentoGridSection } from '../components/bento-grid-section.jsx';
import { AcademicSection } from '../components/academic-section.jsx';
import { AdmissionsCTA } from '../components/admissions-cta.jsx';
---

<Layout title="The First Step International School | Shaping Future Leaders">
  <main class="min-h-screen bg-slate-50">
    <!-- Top Info Bar - Contact, Phone, Quick Links -->
    <TopBar />
    
    <!-- Navbar needs client-side JS for scroll behavior and mobile menu -->
    <Navbar client:load />
    
    <!-- Hero with Framer Motion animations - deferred loading -->
    <HeroSection client:idle />
    
    <!-- Stats with counting animation - load when visible for better performance -->
    <StatsSection client:visible />
    
    <!-- Bento Grid with hover animations -->
    <BentoGridSection client:visible />
    
    <!-- Academic section with scroll animations -->
    <AcademicSection client:visible />
    
    <!-- Admissions CTA with form (needs interactivity) -->
    <AdmissionsCTA client:visible />

    <!-- Footer - Antigravity Style -->
    <footer class="bg-white border-t border-slate-200">
      <!-- Top Section with Links -->
      <div class="container mx-auto px-6 py-16 max-w-6xl">
        <div class="flex flex-col md:flex-row justify-between gap-12">
          <!-- Left: Tagline -->
          <div class="md:max-w-xs">
            <p class="text-xl md:text-2xl font-serif italic text-slate-900 leading-relaxed">
              Nurturing young minds for a brighter future
            </p>
          </div>
          
          <!-- Center & Right: Link Columns -->
          <div class="grid grid-cols-2 md:grid-cols-3 gap-8 md:gap-16 text-sm">
            <div class="flex flex-col gap-3">
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">About Us</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Academics</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Admissions</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Campus Life</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Gallery</a>
            </div>
            <div class="flex flex-col gap-3">
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Infrastructure</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Faculty</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Results</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Events</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Contact</a>
            </div>
            <div class="flex flex-col gap-3 col-span-2 md:col-span-1">
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Parent Portal</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Careers</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Blog</a>
              <a href="#" class="text-slate-800 hover:text-primary transition-colors">Newsletter</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Large Text Section -->
      <div class="w-full px-4 pb-8 overflow-hidden">
        <h2 class="text-[18vw] md:text-[16vw] lg:text-[14vw] font-bold text-primary leading-[0.85] tracking-tighter font-serif text-center whitespace-nowrap">
          The First Step
        </h2>
      </div>

      <!-- Bottom Bar -->
      <div class="border-t border-slate-200">
        <div class="container mx-auto px-6 py-6 max-w-6xl flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-500">
          <p>Â© 2026 The First Step International School. All Rights Reserved.</p>
          <div class="flex gap-6">
            <a href="#" class="hover:text-primary transition-colors">Privacy Policy</a>
            <a href="#" class="hover:text-primary transition-colors">Terms of Use</a>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>
