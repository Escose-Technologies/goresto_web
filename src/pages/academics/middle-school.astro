import InnerPageLayout from '../../layouts/InnerPageLayout.astro';

const breadcrumbs = [
  { name: "Academics", href: "/academics" },
  { name: "Middle School", href: "/academics/middle-school" }
];

const subjects = [
  { name: "Science", icon: "ğŸ”¬" },
  { name: "Mathematics", icon: "ğŸ“" },
  { name: "English", icon: "ğŸ“š" },
  { name: "Social Studies", icon: "ğŸŒ" },
  { name: "Hindi", icon: "ğŸ“" },
  { name: "Third Language", icon: "ğŸ—£ï¸" },
  { name: "Computer Science", icon: "ğŸ’»" },
  { name: "Art Education", icon: "ğŸ¨" },
  { name: "Physical Education", icon: "ğŸƒ" }
];

const features = [
  {
    title: "Developing Reasoning Skills",
    description: "Focus on developing thinking and reasoning skills through analytical approach"
  },
  {
    title: "Balance in Learning",
    description: "Perfect balance between basics, skills, and knowledge for holistic development"
  },
  {
    title: "Arts & Culture Exposure",
    description: "Regular exposure to arts, culture, and physical activity beyond academics"
  },
  {
    title: "CCE Pattern",
    description: "Co-curricular activities following Continuous and Comprehensive Evaluation guidelines"
  }
