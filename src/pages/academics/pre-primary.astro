---
import InnerPageLayout from '../../layouts/InnerPageLayout.astro';

const breadcrumbs = [
  { name: "Academics", href: "/academics" },
  { name: "Pre-Primary", href: "/academics/pre-primary" }
];

const features = [
  {
    title: "Bright & Attractive Classrooms",
    description: "Colorful and engaging learning spaces designed to make education fun and stimulating"
  },
  {
    title: "Play-Based Learning",
    description: "Alternative ways of learning to avoid rote-learning or exhaustive homework"
  },
  {
    title: "Social & Emotional Skills",
    description: "Focus on developing social, emotional, physical, and academic skills together"
  },
  {
    title: "Language Development",
    description: "Emphasis on developing language, visual, and listening skills from an early age"
  },
  {
    title: "Multi-Level Activities",
    description: "Multi-level and multi-content experiences using various materials and equipment"
  },
  {
    title: "Effective Communication",
    description: "Goal to create productive learners and effective communicators"
  }
];

const activities = [
  "Story Time & Rhymes",
  "Art & Craft Activities",
  "Music & Movement",
  "Sand & Water Play",
  "Building Blocks",
  "Outdoor Play",
  "Show & Tell",
  "Nature Walks"
];
---

<InnerPageLayout 
  title="Pre-Primary Education | The First Step International School"
  description="An inspiring pre-school for toddlers providing education in a joyous, receptive, and supportive environment. Nursery, LKG, UKG classes."
  pageTitle="Pre-Primary Education"
  pageSubtitle="Where the love for learning begins"
  breadcrumbs={breadcrumbs}
>
  <!-- Hero Section -->
  <section class="mb-16">
    <div class="bg-gradient-to-br from-pink-500 via-rose-500 to-pink-600 rounded-3xl p-8 md:p-12 text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
      
      <div class="relative grid md:grid-cols-2 gap-8 items-center">
        <div>
          <span class="inline-block bg-white/20 px-4 py-1 rounded-full text-sm font-medium mb-4">
            Nursery â€¢ LKG â€¢ UKG
          </span>
          <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Where Learning Begins</h2>
          <p class="text-white/90 leading-relaxed">
            An inspiring and ultra-modern pre-school for toddlers providing education in a joyous, receptive, and supportive environment. We believe that the foundation years are crucial for lifelong learning.
          </p>
        </div>
        <div class="flex justify-center">
          <div class="w-48 h-48 bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm">
            <span class="text-6xl">ðŸŒŸ</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Age Eligibility -->
  <section class="mb-16">
    <h2 class="text-2xl font-serif font-bold text-slate-900 mb-6">Age Eligibility</h2>
    <div class="grid md:grid-cols-3 gap-4">
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 text-center">
        <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">ðŸ‘¶</span>
        </div>
        <h3 class="font-semibold text-slate-900 mb-1">Nursery</h3>
        <p class="text-slate-500 text-sm">Age: 3+ years</p>
        <p class="text-xs text-slate-400 mt-1">(As on 31st March)</p>
      </div>
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 text-center">
        <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">ðŸ§’</span>
        </div>
        <h3 class="font-semibold text-slate-900 mb-1">LKG</h3>
        <p class="text-slate-500 text-sm">Age: 4+ years</p>
        <p class="text-xs text-slate-400 mt-1">(As on 31st March)</p>
      </div>
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 text-center">
        <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">ðŸ‘¦</span>
        </div>
        <h3 class="font-semibold text-slate-900 mb-1">UKG</h3>
        <p class="text-slate-500 text-sm">Age: 5+ years</p>
        <p class="text-xs text-slate-400 mt-1">(As on 31st March)</p>
      </div>
    </div>
  </section>

  <!-- Key Features -->
  <section class="mb-16">
    <h2 class="text-2xl font-serif font-bold text-slate-900 mb-6">Key Features</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-100 hover:shadow-md transition-shadow">
          <h3 class="font-semibold text-slate-900 mb-2">{feature.title}</h3>
          <p class="text-sm text-slate-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Activities -->
  <section class="mb-16">
    <div class="bg-slate-50 rounded-3xl p-8 md:p-12">
      <h2 class="text-2xl font-serif font-bold text-slate-900 mb-6 text-center">Daily Activities</h2>
      <div class="flex flex-wrap justify-center gap-3">
        {activities.map((activity) => (
          <span class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full text-sm text-slate-700 shadow-sm border border-slate-100">
            <span class="w-2 h-2 bg-pink-500 rounded-full"></span>
            {activity}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section>
    <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100 flex flex-col md:flex-row gap-6 items-center justify-between">
      <div>
        <h3 class="text-xl font-semibold text-slate-900 mb-2">Ready to enroll your little one?</h3>
        <p class="text-slate-600">Admissions are open for the academic year 2026-27</p>
      </div>
      <a href="/admissions" class="inline-flex items-center gap-2 bg-pink-500 hover:bg-pink-600 text-white px-6 py-3 rounded-full font-medium transition-colors">
        Apply Now
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</InnerPageLayout>
